<?xml version="1.0" encoding="UTF-8"?>
<project name="blancoApexParser" default="build" basedir=".">
	<target name="pack">
		<echo>pack project</echo>
		<delete file="blancoApexParser.zip" />
		<delete dir="bin" />

		<zip destfile="blancoApexParser.zip">
			<zipfileset dir="." prefix="blancoApexParser" excludes="blancoApexParser.zip,**/*.class" />
		</zip>
	</target>

	<target name="jar">
		<echo>build jar</echo>

		<delete file="blancoApexParser.jar" />
		<jar destfile="blancoApexParser.jar">
			<zipfileset dir="bin" />
			<zipfileset dir="src" includes="**/*" prefix="src" />
		</jar>
	</target>

	<target name="compile">
		<delete dir="bin" />
		<mkdir dir="bin" />
		<javac destdir="bin" debug="true" source="1.6" target="1.6" fork="true" encoding="UTF-8">
			<src path="src/" />
			<include name="**/*.java" />
		</javac>
	</target>

	<target name="build" depends="compile,jar,pack" />
</project>